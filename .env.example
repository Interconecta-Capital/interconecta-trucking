# ==============================================
# VARIABLES DE ENTORNO - TruckingApp
# ==============================================

# ============ SUPABASE ============
VITE_SUPABASE_URL=https://tu-proyecto.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=tu_supabase_anon_key
# NOTA: SUPABASE_SERVICE_ROLE_KEY solo va en backend/edge functions, NUNCA en frontend

# ============ STRIPE (Frontend) ============
# Claves públicas (pk_*) - Seguras para exponer en frontend
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxx
VITE_STRIPE_PUBLISHABLE_KEY_TEST=pk_test_xxxxxxxxxxxxxxxxxxxx

# Price IDs para planes (obtenidos desde Stripe Dashboard)
VITE_STRIPE_PRICE_OPERADOR_MONTHLY=price_xxxx
VITE_STRIPE_PRICE_OPERADOR_ANNUAL=price_xxxx
VITE_STRIPE_PRICE_FLOTA_MONTHLY=price_xxxx
VITE_STRIPE_PRICE_FLOTA_ANNUAL=price_xxxx
VITE_STRIPE_PRICE_BUSINESS_MONTHLY=price_xxxx
VITE_STRIPE_PRICE_BUSINESS_ANNUAL=price_xxxx

# Price IDs para modo TEST
VITE_STRIPE_PRICE_OPERADOR_MONTHLY_TEST=price_xxxx
VITE_STRIPE_PRICE_OPERADOR_ANNUAL_TEST=price_xxxx
VITE_STRIPE_PRICE_FLOTA_MONTHLY_TEST=price_xxxx
VITE_STRIPE_PRICE_FLOTA_ANNUAL_TEST=price_xxxx
VITE_STRIPE_PRICE_BUSINESS_MONTHLY_TEST=price_xxxx
VITE_STRIPE_PRICE_BUSINESS_ANNUAL_TEST=price_xxxx

# ============ GOOGLE SERVICES ============
VITE_GOOGLE_MAPS_API_KEY=tu_google_maps_api_key

# ============ CONFIGURACIÓN APP ============
NODE_ENV=development
VITE_APP_ENV=development
VITE_DEBUG_MODE=true

# ============ PRODUCCIÓN (descomentar) ============
# NODE_ENV=production
# VITE_APP_ENV=production
# VITE_DEBUG_MODE=false

